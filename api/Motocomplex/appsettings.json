{
  "ConnectionStrings": {
    "MotocomplexConnectionString": "Server=(localdb)\\mssqllocaldb;Database=MotocomplexDb;Trusted_Connection=True;"
  },
  "Sieve": {
    "DefaultPageSize": 40,
    "MaxPageSize": 40
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console" ],
    "Enrich": [ "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "MotocomplexConnectionString",
          "tableName": "ErrorLogs",
          "autoCreateSqlTable": true
        },
        "MinimumLevel": "Error"
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        },
        "MinimumLevel": "Information"
      }
    ]
  },
  "Columns": {
    "message": "RenderedMessage",
    "message_template": "MessageTemplate",
    "level": {
      "Name": "Level",
      "Args": {
        "renderAsText": true,
        "dbType": "Varchar"
      }
    },
    "raise_date": "Timestamp",
    "exception": "Exception",
    "properties": "Properties",
    "props_test": {
      "Name": "Properties",
      "Args": { "dbType": "Xml" }
    },
    "machine_name": {
      "Name": "Column",
      "Args": {
        "columnName": "MachineName",
        "propertyValue": "MachineName",
        "writeMethod": "Raw"
      }
    }
  },
  "AllowedHosts": "*"
}